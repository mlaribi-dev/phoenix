                    <a href="{{ path('user_edit', {'id': user.id}) }}"><button type="button" class="btn btn-primary">edit</button></a>
                </td>
            </tr>
            
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('user_new') }}"><button type="button" class="btn btn-success">new</button></a>
    
{% endblock %}
