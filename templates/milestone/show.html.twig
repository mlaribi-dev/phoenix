{% extends 'base.html.twig' %}

{% block title %}Milestone{% endblock %}

{% block body %}
    <h1>Milestone</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ milestone.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ milestone.name }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ milestone.value }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ milestone.state ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date_obtain</th>
                <td>{{ milestone.dateObtain ? milestone.dateObtain|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('milestone_index') }}">back to list</a>

    <a href="{{ path('milestone_edit', {'id': milestone.id}) }}">edit</a>

    {{ include('milestone/_delete_form.html.twig') }}
{% endblock %}
