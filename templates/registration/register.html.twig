{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    
    {{ form_start(registrationForm) }}
    <div class="row">
        <div class="col-md-4">{{ form_row(registrationForm.lastName) }}</div>
        <div class="col-md-4">{{ form_row(registrationForm.firstName) }}</div>
    </div>

    <div class="row">
        <div class="col-md-4">{{ form_row(registrationForm.email) }}</div>
        <div class="col-md-4">{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}</div>
    </div>

    

    <button type="submit" class="btn btn-success">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
